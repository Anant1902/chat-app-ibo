{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Python: Sample App Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "quart",
      "cwd": "${workspaceFolder}",
      "env": {
          "QUART_APP": "app:app",
          "QUART_ENV": "development",
          "QUART_DEBUG": "1"
      },
      "args": [
          "run",
          "--no-reload",
          "-p 50505"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env",
  }
  ]
}